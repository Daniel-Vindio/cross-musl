program="check"
version="$VER_check"
release="1"
#arch=""

tarname=${program}-${version}.tar.gz

description="

Check is a unit testing framework for C.
---
"


build() {

unpack "${tardir}/$tarname"
cd "$srcdir"

echo -e "\nCreaciÃ³n paquete Qi $program \n$(date)" >> $FILE_BITACORA

