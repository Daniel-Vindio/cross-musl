program="grub"
version="$VER_grub"
release="1"
#arch=""

tarname=${program}-${version}.tar.xz

description="

The GRUB package contains the GRand Unified Bootloader.
---
"


build() {

unpack "${tardir}/$tarname"
cd "$srcdir"

echo -e "\nCreaciÃ³n paquete Qi $program \n$(date)" >> $FILE_BITACORA

./configure \
--prefix=/usr \
--sbindir=/sbin \
--sysconfdir=/etc \
--disable-efiemu \
--disable-werror

make

make DESTDIR=${destdir} install
}











